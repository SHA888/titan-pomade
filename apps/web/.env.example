# =============================================================================
# TITAN POMADE WEB - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env.local and update the values for your local development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# For local development (API running on localhost)
# NEXT_PUBLIC_API_URL=http://localhost:5000

# For Docker development (API running in container)
NEXT_PUBLIC_API_URL=http://localhost:5000

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_FEATURE_SEARCH=true
NEXT_PUBLIC_FEATURE_ANALYTICS=false
NEXT_PUBLIC_FEATURE_EXAMPLE=false

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# AUTH0 CONFIGURATION (Optional)
# =============================================================================
NEXT_PUBLIC_AUTH0_DOMAIN=your-domain.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=your-api-audience

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable verbose error messages in development
NEXT_PUBLIC_DEBUG=true
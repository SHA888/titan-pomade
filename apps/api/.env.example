# =============================================================================
# TITAN POMADE API - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env and update the values for your local development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=5000

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PREFIX=api
API_VERSION=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development (without Docker)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/titan_pomade_dev

# For Docker development
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/titan_pomade_dev

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# For local development (without Docker)
# REDIS_URL=redis://localhost:6379

# For Docker development
REDIS_URL=redis://redis:6379

# =============================================================================
# MEILISEARCH CONFIGURATION
# =============================================================================
# For local development (without Docker)
# MEILISEARCH_HOST=http://localhost:7700

# For Docker development
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_API_KEY=masterKey

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://web:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS

# =============================================================================
# RATE LIMITING & THROTTLING
# =============================================================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_PRETTY_PRINT=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@titan-pomade.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_URL=/health

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Default passwords for seeding (development only)
ADMIN_PASSWORD=admin123
USER_PASSWORD=user123
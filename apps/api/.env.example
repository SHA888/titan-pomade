# Server Configuration
PORT=3001
NODE_ENV=development

# API Configuration
API_PREFIX=api
API_VERSION=1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/titan_pomade?schema=public

# Seed Script (for development only)
# WARNING: In production, use strong, unique passwords and never commit them to version control
ADMIN_PASSWORD=admin123
USER_PASSWORD=user123

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
LOG_PRETTY_PRINT=true

# Health Check
HEALTH_CHECK_URL=/health

# Security
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d

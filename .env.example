# =============================================================================
# TITAN POMADE - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env and update the values for your local development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
PORT=5000
API_PREFIX=api
API_VERSION=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/titan_pomade_dev

# PostgreSQL Database Settings (for Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=titan_pomade_dev
POSTGRES_PORT=5433

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# =============================================================================
# MEILISEARCH CONFIGURATION
# =============================================================================
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=masterKey
MEILISEARCH_PORT=7700
MEILISEARCH_MASTER_KEY=masterKey

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS

# =============================================================================
# RATE LIMITING & THROTTLING
# =============================================================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_PRETTY_PRINT=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@titan-pomade.com

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_FEATURE_SEARCH=true
NEXT_PUBLIC_FEATURE_ANALYTICS=false

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# AUTH0 CONFIGURATION (Optional)
# =============================================================================
NEXT_PUBLIC_AUTH0_DOMAIN=your-domain.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=your-api-audience

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Default passwords for seeding (development only)
ADMIN_PASSWORD=admin123
USER_PASSWORD=user123

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_URL=/health

# =============================================================================
# DOCKER SETTINGS
# =============================================================================
# Ports for Docker services
APP_PORT=3000
API_PORT=5000
DB_PORT=5433
REDIS_PORT_EXTERNAL=6379
MEILISEARCH_PORT_EXTERNAL=7700
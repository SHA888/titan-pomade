# =============================================================================
# TITAN POMADE - PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.production and update the values for production

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production

# =============================================================================
# API CONFIGURATION
# =============================================================================
PORT=5000
API_PREFIX=api
API_VERSION=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@your-db-host:5432/titan_pomade_prod

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://your-redis-host:6379

# =============================================================================
# MEILISEARCH CONFIGURATION
# =============================================================================
MEILISEARCH_HOST=https://your-meilisearch-host:7700
MEILISEARCH_API_KEY=your-production-master-key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-change-this
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-change-this
JWT_REFRESH_EXPIRATION=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS

# =============================================================================
# RATE LIMITING & THROTTLING
# =============================================================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_PRETTY_PRINT=false

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USER=your-production-email@domain.com
MAIL_PASS=your-secure-app-password
MAIL_FROM=noreply@your-domain.com

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_APP_URL=https://your-domain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_FEATURE_SEARCH=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# =============================================================================
# ANALYTICS
# =============================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# AUTH0 CONFIGURATION (Optional)
# =============================================================================
NEXT_PUBLIC_AUTH0_DOMAIN=your-production-domain.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-production-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=your-production-api-audience

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_URL=/health

# =============================================================================
# PRODUCTION DOCKER SETTINGS
# =============================================================================
# Database settings for production deployment
DB_USER=postgres
DB_PASSWORD=your-secure-db-password
DB_NAME=titan_pomade_prod
DB_PORT=5432

# MeiliSearch settings
MEILISEARCH_MASTER_KEY=your-production-meilisearch-master-key
MEILISEARCH_PORT=7700

# Redis settings
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Application ports
APP_PORT=3000
API_PORT=5000

# Docker image tags
TAG=latest
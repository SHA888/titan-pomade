{
  "name": "titan-pomade",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"pnpm --filter @titan-pomade/web dev\" \"pnpm --filter @titan-pomade/api start:dev\"",
    "build": "pnpm --filter @titan-pomade/web build && pnpm --filter @titan-pomade/api build",
    "start": "node dist/apps/api/main.js",
    "docker:setup": "./dev.sh setup",
    "docker:dev": "./dev.sh start",
    "docker:stop": "./dev.sh stop",
    "docker:restart": "./dev.sh restart",
    "docker:clean": "./dev.sh clean",
    "docker:logs": "./dev.sh logs",
    "docker:status": "./dev.sh status",
    "docker:build": "./dev.sh build",
    "db:migrate": "pnpm --filter @titan-pomade/api db:migrate",
    "db:seed": "pnpm --filter @titan-pomade/api db:seed",
    "db:studio": "pnpm --filter @titan-pomade/api db:studio",
    "db:reset": "./dev.sh db-reset"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@8.0.0",
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@types/handlebars": "^4.1.0",
    "@types/nodemailer": "^6.4.17",
    "date-fns": "^4.1.0",
    "handlebars": "^4.7.8",
    "nodemailer": "^7.0.5"
  }
}
